extends ../layout

block content
  table.table.table-bordered
    thead
      tr
        th Fullname
        th Email
        th.hidden-xs Action
    tbody
      each user in users
        tr
          td= user.firstName + " " + user.lastName
          td= user.email
          td.hidden-xs
            a.btn.btn-danger.delete(href='user/delete/' + user.userId) delete
