extends ../layout

block content
  form.form-horizontal(action="register" method="post")
    .form-group
      label.control-label.col-sm-2(for='fullname') Fullname:
      .col-sm-10
        input#firstname.form-control(type='text', name='fullName', placeholder='Enter fullname', required)
    .form-group
      label.control-label.col-sm-2(for='email') Email:
      .col-sm-10
        input#email.form-control(type='email', name='email', placeholder='Enter email', required)
    .form-group
      label.control-label.col-sm-2(for='password') Password:
      .col-sm-10
        input#password.form-control(type='password', name='password', placeholder='Enter password', required)
    .form-group
      .col-sm-offset-2.col-sm-10
        .checkbox
          label
            input(type='checkbox')
            |  Remember me
    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-primary(class=btn-primary type='submit') Sign Up
