extends ../layout

block content
  div(ng-controller="driverListCtrl")
    a.btn.btn-primary.pull-right(ng-click="getAllDriversPDF()")
      | Download pdf
      
  .container.page-header
    h2.text-danger.text-center
      | List of Drivers

    - if (drivers.length)
      table.table.table-hover
        thead
          tr
            th Driver ID
            th Fullname
            th Email
            th Phone
            th Action

        each driver in drivers
          tbody
            tr
              td= driver.displayId
              td= driver.fullname
              td= driver.email
              td= driver.phone
              td
                a.btn.btn-danger.delete(href='./delete/' + driver.personId) delete
              
    - else
      .alert.alert-info
        strong
          | Sorry!
        |  No driver has registered yet!
