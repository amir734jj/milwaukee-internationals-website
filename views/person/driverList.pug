extends ../layout

block content
  div(ng-controller="driverListCtrl")
    a.btn.btn-primary.pull-right(ng-click="getAllDriversPDF()")
      | Download pdf
      
  .container.page-header
    h2.text-danger.text-center
      | List of Drivers

    - if (drivers.length)
      table.table.table-hover(data-toggle="table")
        thead
          tr
            th.hidden-xs(data-sortable="true") Driver ID
            th(data-sortable="true") Fullname
            th(data-sortable="true") Email
            th Phone
            th.hidden-xs Action

        each driver in drivers
          tbody
            tr
              td.hidden-xs= driver.displayId
              td= driver.fullname
              td= driver.email
              td= driver.phone
              td.hidden-xs
                a.btn.btn-danger.delete(href='./delete/' + driver.personId) delete
              
    - else
      .alert.alert-info
        strong
          | Sorry!
        |  No driver has registered yet!
