extends ../layout

block content
  .container.page-header
    h2.text-danger.text-center
      | List of Hosts

    - if (hosts.length)
      table.table.table-hover
        thead
          tr
            th Host ID
            th Fullname
            th Email
            th Phone

        each host in hosts
          tbody
            tr
              td= host.displayId
              td= host.fullname
              td= host.email
              td= host.phone
    - else
      .alert.alert-info
        strong
          | Sorry!
        |  No host has registered yet!
