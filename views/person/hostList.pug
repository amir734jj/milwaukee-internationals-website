extends ../layout

block content
  div(ng-controller="hostListCtrl")
    a.btn.btn-primary.pull-right(ng-click="getAllHostsPDF()")
      | Download pdf
      
  .container.page-header
    h2.text-danger.text-center
      | List of Hosts

    - if (hosts.length)
      table.table.table-hover
        thead
          tr
            th Host ID
            th Fullname
            th Email
            th Phone
            th Action
            
        each host in hosts
          tbody
            tr
              td= host.displayId
              td= host.fullname
              td= host.email
              td= host.phone
              td
                a.btn.btn-danger(href='./delete/' + host.personId) delete
    - else
      .alert.alert-info
        strong
          | Sorry!
        |  No host has registered yet!
