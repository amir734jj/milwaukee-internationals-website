doctype html
html(lang="en")
  head
    title
      | Milwaukee social network
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

  for name in bundles.emit('bundle.css')
    link(rel='stylesheet', href="/"+name)

  for name in bundles.emit('bundle.js')
    script(href='stylesheet', src="/"+name)

  body(ng-app='myApp', ng-controller='myCtrl')
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Social network
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(class="active")
              a(href='/') Home
            li
              a(href='/users') Users
            li
              a(href='/register-for-tour') Register For Tour of Milwaukee
            - if (user)
              li
                a(href='/register-for-tour/list') Sudents
                
          ul.nav.navbar-nav.navbar-right
            - if (user)
              li
                a(href='/logout')
                  span.glyphicon.glyphicon-log-out
                  |  Logout
            - else
              li
                a(href='/register')
                  span.glyphicon.glyphicon-user
                  |  Sign Up
              li
                a(href='/login')
                  span.glyphicon.glyphicon-log-in
                  |  Login
    .container
      - if (note)
        .alert.alert-danger #{note}

      .jumbotron
        block content
