doctype html
html(lang="en")
  head
    title
      | Milwaukee Internationals

    - if (bundles)
      for name in bundles.emit('bundle.css')
        link(rel='stylesheet', href="/"+name)

      for name in bundles.emit('bundle.js')
        script(href='stylesheet', src="/"+name)

  body(ng-app='myApp', ng-controller="myCtrl")
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Milwaukee Internationals
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li
              a(href='/student/register') Register for Tour of Milwaukee

            - if (user)
              li.dropdown
                a.dropdown-toggle(data-toggle='dropdown', href='#') Lists
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/student/list') Student list
                  li
                    a(href='/person/list/driver') Driver list    
                  li
                    a(href='/person/list/host') Host list

              li
                a(href='/student/register') Register Person
              li
                a(href='/mapping/driver/student') Driver mapping
              li
                a(href='/mapping/host/student') Host mapping

          ul.nav.navbar-nav.navbar-right
            - if (user)
              li
                a(href='/user/logout')
                  span.glyphicon.glyphicon-log-out Logout
            - else
              li
                a(href='/user/register')
                  span.glyphicon.glyphicon-user Sign Up
              li
                a(href='/user/login')
                  span.glyphicon.glyphicon-log-in Login
    .container
      - if (note)
        .alert.alert-danger #{note}

      .jumbotron
        block content
