doctype html
html(lang="en")
  head
    title
      | Milwaukee Internationals

    for name in bundles.emit('bundle.css')
      link(rel='stylesheet', href="/"+name)

    for name in bundles.emit('bundle.js')
      script(href='stylesheet', src="/"+name)

  body(ng-app='myApp', ng-controller='myCtrl')
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Milwaukee Internationals
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li
              a(href='/users') Users
            li
              a(href='/registerForTour') Register for Tour of Milwaukee
            - if (user)
              li
                a(href='/registerForTour/list')
                  span.glyphicon.glyphicon-list
                  |  list of students
              li
                a(href='/drivers/list')
                  span.glyphicon.glyphicon-list
                  |  Drivers
              li
                a(href='/hosts/list')
                  span.glyphicon.glyphicon-list
                  |  Hosts
          ul.nav.navbar-nav.navbar-right
            - if (user)
              li
                a(href='/logout')
                  span.glyphicon.glyphicon-log-out
                  |  Logout
            - else
              li
                a(href='/register')
                  span.glyphicon.glyphicon-user
                  |  Sign Up
              li
                a(href='/login')
                  span.glyphicon.glyphicon-log-in
                  |  Login
    .container
      - if (note)
        .alert.alert-danger #{note}

      .jumbotron
        block content
