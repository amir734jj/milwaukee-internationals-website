extends layout

block content

  form.form-horizontal(action="/tourOfMilwaukee" method="post")
    .form-group
      label.control-label.col-sm-2(for='fullname') Full Name:
      .col-sm-10
        input#fullname.form-control(type='text', name='fullname', placeholder='Enter your fullname', required)

    .form-group
      label.control-label.col-sm-2(for='fullname') Major:
      .col-sm-10
        input#major.form-control(type='text', name='major', placeholder='Enter your major', required)

    .form-group
      label.control-label.col-sm-2(for='country') Country:
      .col-sm-10
        select#country.form-control(name='country')
          Iran
          India
          Pakistan
          USA
    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-default(type='submit') Register for tour of Milwaukee
